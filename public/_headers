/*
  # Minimal, header-based CSP and safety headers
  # Adjust as needed; this is intentionally permissive for scripts.
  Content-Security-Policy: default-src '"'self'"'; img-src '"'self'"' data: https:; style-src '"'self'"' '"'unsafe-inline'"' https://fonts.googleapis.com; font-src '"'self'"' https://fonts.gstatic.com; script-src '"'self'"' '"'unsafe-eval'"'; connect-src '"'self'"' https:; base-uri '"'self'"'
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: no-referrer-when-downgrade
  Permissions-Policy: camera=(), microphone=(), geolocation=()

/assets/*
  # Hashed assets can be cached aggressively
  Cache-Control: public, max-age=31536000, immutable

/
  # HTML shouldn’t be cached by intermediaries
  Cache-Control: no-store
